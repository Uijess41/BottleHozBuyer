<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".activities.BottomNavActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/card">
        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="5dp"
            android:layout_alignParentBottom="true">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNav"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/bottom_menu">


            </com.google.android.material.bottomnavigation.BottomNavigationView>



        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardnew"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="100dp"

                    card_view:cardCornerRadius="10dp"
                    android:layout_below="@+id/ivBg"
                    android:layout_centerHorizontal="true"
                    card_view:cardElevation="0dp"
                    android:layout_toLeftOf="@+id/iv_option"
                    android:layout_margin="5dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/demo"
                        android:background="@color/white"
                        android:scaleType="fitXY" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="User"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:orientation="vertical"
                android:background="@drawable/profile_bg">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/cart"
                        android:tint="@color/white"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Cart"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/cart"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/white_round"
                        android:padding="5dp"
                        android:text="30dp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:textSize="8dp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:id="@+id/coupons"
                        android:layout_centerVertical="true"
                        android:tint="@color/white"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:text="Coupons"
                        android:layout_toRightOf="@+id/coupons"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/white_round"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:text="30dp"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:textSize="8dp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:id="@+id/promo"
                        android:tint="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Promotions"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/promo"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/white_round"
                        android:padding="5dp"
                        android:text="30dp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:textSize="8dp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/follow"
                        android:tint="@color/white"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Following"
                        android:layout_toRightOf="@+id/follow"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/white_round"
                        android:padding="5dp"
                        android:text="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="8dp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/support"
                        android:tint="@color/white"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Support"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/support"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="12sp" />



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:id="@+id/order"
                        android:tint="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Order History"
                        android:layout_toRightOf="@+id/order"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="12sp" />



                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/feed"
                        android:tint="@color/white"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="My Feed"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/feed"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="12sp" />



                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="20dp"
                        android:padding="5dp"
                        android:id="@+id/fav"
                        android:tint="@color/white"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:text="My Feed"
                        android:layout_toRightOf="@+id/fav"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="12sp" />



                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/settings"
                    android:tint="@color/md_green_400"
                    android:layout_marginLeft="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Settings"
                    android:layout_toRightOf="@+id/settings"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="@color/md_green_400"
                    android:textSize="12sp" />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/logout"
                    android:tint="@color/md_green_400"
                    android:layout_marginLeft="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:text="Logout"
                    android:layout_toRightOf="@+id/logout"
                    android:textStyle="bold"
                    android:textColor="@color/md_green_400"
                    android:textSize="12sp" />



            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Refer a friend"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/logout"
                android:textStyle="bold"
                android:textColor="@color/black"

                android:textSize="12sp" />

        </LinearLayout>


    </com.google.android.material.navigation.NavigationView>



</androidx.drawerlayout.widget.DrawerLayout>