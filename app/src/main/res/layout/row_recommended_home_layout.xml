<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/rlC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRecommend"
            android:layout_width="270dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="85dp">

                <ImageView
                    android:id="@+id/imgPlus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_toLeftOf="@+id/imgFav"
                    android:background="?actionBarItemBackground"
                    android:padding="8dp"
                    android:src="@drawable/plus"
                    android:visibility="visible" />


                <ImageView
                    android:id="@+id/imgFav"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:background="?actionBarItemBackground"
                    android:padding="8dp"
                    android:src="@drawable/infav"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgPlus"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/sfprodisplay_semibold"
                    android:text="Malteadas tropicales"
                    android:textColor="@color/md_indigo_900" />



                <TextView
                    android:id="@+id/txPriceRecommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCan"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="N1,800"
                    android:textColor="@color/md_indigo_900" />

                <TextView
                    android:id="@+id/txtCan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtName"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="Elaborada can jugas naturales"
                    android:textColor="@color/greyNew"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imgarrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/txtCan"
                    android:layout_alignParentRight="true"
                    android:layout_margin="12dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/rightarrow" />


            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>



    <ImageView
        android:id="@+id/imgRecommended"
        android:layout_width="80dp"
        android:layout_below="@+id/rlC"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-80dp"
        android:src="@drawable/recom"
        />



</RelativeLayout>