<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CartActivity">

    <ScrollView
        android:layout_width="match_parent"
       android:layout_marginBottom="60dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rlBottom"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/rect"
                android:layout_height="70dp">
                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="7dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/bkmenu" />

                <TextView
                    android:id="@+id/txtCatName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfprodisplay_semibold"
                    android:layout_toRightOf="@+id/ivBack"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="@string/my_cart"

                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivMenu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/greenback" />




            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:id="@+id/rvCart"
                android:layout_height="wrap_content"/>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/v"
                android:id="@+id/rlDel"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtDev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/delivery_fee"

                    android:textColor="@color/md_green_500"
                    android:textSize="15sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvsys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="₦"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@+id/tvDelFee"
                    android:textColor="@color/md_green_500"
                    android:textSize="15sp"
                    android:fontFamily="@font/sfprodisplay_semibold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvDelFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/sfprodisplay_semibold"
                    android:gravity="center_vertical"
                    android:text="700"
                    android:textColor="@color/md_green_500"
                    android:textSize="15sp"
                    android:visibility="visible" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/rlDel"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_marginLeft="100dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtAm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/amount"

                    android:textColor="@color/md_green_500"
                    android:textSize="15sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvsys1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="₦"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@+id/tvAmount"
                    android:textColor="@color/md_green_500"
                    android:textSize="15sp"
                    android:fontFamily="@font/sfprodisplay_semibold"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="700"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/md_green_500"
                    android:textSize="15sp"
                    android:fontFamily="@font/sfprodisplay_semibold"
                    android:visibility="visible" />
            </RelativeLayout>








        </LinearLayout>



    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlBottom"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rl"
            android:layout_alignParentBottom="true"
            android:layout_height="50dp">

            <CheckBox
                android:id="@+id/ckSelectAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Select All"
                android:layout_alignParentBottom="true"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:buttonTint="@color/grey"
                android:button="@drawable/checkboxstylesquare"
                />



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/rl"
            android:layout_marginLeft="10dp"
            android:background="@drawable/crt"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprodisplay_semibold"
                android:text="₦ 25,00"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtSym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtPrice"
                android:fontFamily="@font/sfprodisplay_semibold"
                android:text="|"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtSym"
                android:fontFamily="@font/sfprodisplay_semibold"
                android:text="Checkout"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/ivright"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="8dp"
                android:layout_toRightOf="@+id/txtCheckout"
                android:layout_marginLeft="15dp"
                android:src="@drawable/rightwhite" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>